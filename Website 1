  <script>
    // ===== Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const id = a.getAttribute('href');
        if(!id || id === "#") return;
        const el = document.querySelector(id);
        if(!el) return;
        e.preventDefault();
        el.scrollIntoView({behavior:'smooth', block:'start'});
      });
    });

    // ===== Scroll reveal
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(en=>{
        if(en.isIntersecting){
          en.target.classList.add('reveal');
          io.unobserve(en.target);
        }
      });
    }, {threshold: 0.12});
    document.querySelectorAll('.reveal-on-scroll').forEach(el=>io.observe(el));

    // ===== Year
    document.getElementById('yr').textContent = new Date().getFullYear();

    // ===== Email form -> opens mail client
    const YOUR_EMAIL = "offical.detailing.co@gmail.com"; // <--- change this
    document.getElementById('mailForm').addEventListener('submit', (e)=>{
      e.preventDefault();
      const data = new FormData(e.target);
      const subject = encodeURIComponent("Detail Quote Request");
      const body = encodeURIComponent(
        `Name: ${data.get('name')}\nVehicle: ${data.get('vehicle')}\n\nMessage:\n${data.get('msg')}`
      );
      window.location.href = `mailto:${YOUR_EMAIL}?subject=${subject}&body=${body}`;
    });

    // ===== Futuristic particle sparks (canvas)
    const canvas = document.getElementById('fx');
    const ctx = canvas.getContext('2d');

    let w, h, dpr;
    function resize(){
      dpr = Math.max(1, window.devicePixelRatio || 1);
      w = canvas.width = Math.floor(window.innerWidth * dpr);
      h = canvas.height = Math.floor(window.innerHeight * dpr);
      canvas.style.width = window.innerWidth + "px";
      canvas.style.height = window.innerHeight + "px";
    }
    window.addEventListener('resize', resize);
    resize();

    const rand = (a,b)=>a + Math.random()*(b-a);

    const sparks = [];
    const SPARKS = 90;
    for(let i=0;i<SPARKS;i++){
      sparks.push({
        x: rand(0,w), y: rand(0,h),
        vx: rand(-.12,.12)*dpr,
        vy: rand(.05,.25)*dpr,
        r: rand(0.7, 2.2)*dpr,
        a: rand(.08,.25),
        phase: rand(0, Math.PI*2)
      });
    }

    let mx = w/2, my = h/2;
    window.addEventListener('mousemove', (e)=>{
      mx = e.clientX * dpr;
      my = e.clientY * dpr;
    });

    function step(){
      ctx.clearRect(0,0,w,h);

      const g = ctx.createRadialGradient(w*0.5, h*0.35, 0, w*0.5, h*0.35, Math.max(w,h)*0.65);
      g.addColorStop(0, "rgba(0,245,255,0.06)");
      g.addColorStop(1, "rgba(0,0,0,0)");
      ctx.fillStyle = g;
      ctx.fillRect(0,0,w,h);

      for(const s of sparks){
        s.x += s.vx;
        s.y += s.vy;

        if(s.y > h + 20*dpr){ s.y = -20*dpr; s.x = rand(0,w); }
        if(s.x < -20*dpr) s.x = w + 20*dpr;
        if(s.x > w + 20*dpr) s.x = -20*dpr;

        const dx = mx - s.x, dy = my - s.y;
        const dist = Math.hypot(dx,dy) + 0.001;
        const pull = Math.min(0.06*dpr, 40*dpr/dist) * 0.008;
        s.vx += (dx/dist) * pull;
        s.vy += (dy/dist) * pull;

        s.vx *= 0.985;
        s.vy *= 0.99;

        s.phase += 0.03;
        const alpha = s.a + Math.sin(s.phase)*0.05;

        ctx.beginPath();
        ctx.arc(s.x, s.y, s.r, 0, Math.PI*2);
        ctx.fillStyle = `rgba(0,245,255,${Math.max(0,alpha)})`;
        ctx.fill();

        ctx.beginPath();
        ctx.moveTo(s.x, s.y);
        ctx.lineTo(s.x - s.vx*18, s.y - s.vy*18);
        ctx.strokeStyle = `rgba(124,92,255,${Math.max(0,alpha*0.6)})`;
        ctx.lineWidth = 1.2*dpr;
        ctx.stroke();
      }

      requestAnimationFrame(step);
    }
    step();

    // ===== INTRO: garage opening + car selector + modal
    const intro = document.getElementById("intro");
    const skip = document.getElementById("skipIntro");

    setTimeout(() => intro.classList.add("open"), 600);

    const carModels = [
      {
        key: "coupe",
        name: "Coupe",
        desc: "Sleek and compact ‚Äî perfect for a sharp, showroom-style finish.",
        bullets: [
          ["Exterior Shine", "Gloss boost, trim detail, and streak-free glass."],
          ["Interior Detail", "Dust-free cabin with clean seats and console."],
          ["Optional Upgrade", "Paint correction for maximum gloss."]
        ]
      },
      {
        key: "sedan",
        name: "Sedan",
        desc: "Daily-driver friendly detailing with a clean, refreshed interior and exterior.",
        bullets: [
          ["Interior Reset", "Vacuum, wipe-down, cracks and crevices."],
          ["Exterior Wash", "Foam wash, wheels, tires, and protection."],
          ["Best Value", "Full detail recommended."]
        ]
      },
      {
        key: "truck",
        name: "Truck",
        desc: "Built for dirt and work ‚Äî we focus on tough cleanup and durable protection.",
        bullets: [
          ["Heavy-Duty Exterior", "Mud, wheels, tires, and road grime."],
          ["Cab Interior", "Dash, seats, and center console reset."],
          ["Protection", "Sealant helps keep it cleaner longer."]
        ]
      },
      {
        key: "small-suv",
        name: "Small SUV",
        desc: "Great for daily use, pets, and weekend adventures.",
        bullets: [
          ["Interior Deep Clean", "Seats, carpets, and cargo area."],
          ["Exterior Detail", "Foam wash, trim, and glass."],
          ["Add-ons", "Pet hair or stain removal available."]
        ]
      },
      {
        key: "large-suv",
        name: "Large SUV",
        desc: "More space means more detail ‚Äî perfect for families and road trips.",
        bullets: [
          ["Full Interior Detail", "All rows, mats, and cargo space."],
          ["Exterior Protection", "Gloss and long-lasting protection."],
          ["Recommended", "Full detail package."]
        ]
      },
      {
        key: "suburban",
        name: "Suburban / XL SUV",
        desc: "Maximum size, maximum impact ‚Äî our most detailed service option.",
        bullets: [
          ["Complete Interior", "Every row, cupholder, and crevice."],
          ["Exterior Restore", "Large-body wash, wheels, and trim."],
          ["Premium Option", "Ideal for families, work, and travel."]
        ]
      }
    ];

    const carVisual = document.getElementById("carVisual");
    const modelName = document.getElementById("modelName");
    const prevCar = document.getElementById("prevCar");
    const nextCar = document.getElementById("nextCar");
    const carSelect = document.getElementById("carSelect");

    const modal = document.getElementById("modelModal");
    const closeModal = document.getElementById("closeModal");
    const modalTitle = document.getElementById("modalTitle");
    const modalDesc = document.getElementById("modalDesc");
    const modalBullets = document.getElementById("modalBullets");

    let idx = 0;

    function applyModel(){
      const m = carModels[idx];
      modelName.textContent = m.name;

      carVisual.classList.remove("coupe","sedan","truck","small-suv","large-suv","suburban");
      carVisual.classList.add(m.key);
    }

    function openDetail(){
      const m = carModels[idx];

      modalTitle.textContent = `${m.name} ‚Äî Recommended Detail`;
      modalDesc.textContent = m.desc;

      modalBullets.innerHTML = "";
      m.bullets.forEach(([t, s])=>{
        const div = document.createElement("div");
        div.className = "bullet";
        div.innerHTML = `<b>${t}</b><small>${s}</small>`;
        modalBullets.appendChild(div);
      });

      intro.classList.add("hidden");
      modal.classList.remove("hidden");
      modal.setAttribute("aria-hidden","false");
    }

    function closeDetail(){
      modal.classList.add("hidden");
      modal.setAttribute("aria-hidden","true");
    }

    prevCar.addEventListener("click", (e)=>{
      e.stopPropagation();
      idx = (idx - 1 + carModels.length) % carModels.length;
      applyModel();
    });

    nextCar.addEventListener("click", (e)=>{
      e.stopPropagation();
      idx = (idx + 1) % carModels.length;
      applyModel();
    });

    carSelect.addEventListener("click", (e)=>{
      e.stopPropagation();
      openDetail();
    });

    skip.addEventListener("click", (e)=>{
      e.stopPropagation();
      intro.classList.add("hidden");
    });

    closeModal.addEventListener("click", closeDetail);
    modal.addEventListener("click", (e)=>{
      if(e.target.classList.contains("modal-backdrop")) closeDetail();
    });
    window.addEventListener("keydown", (e)=>{
      if(e.key === "Escape") closeDetail();
    });

    applyModel();
  </script>
</body>
</html>
